use_xft yes
xftfont 123:size=8
xftalpha 0.1
update_interval 1
total_run_times 0

own_window yes
own_window_class Conky
own_window_type override
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_colour 000000
own_window_argb_visual no
own_window_argb_value 0

double_buffer yes
#minimum_size 250 5
#maximum_width 500
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
default_color ffffff
default_shade_color 000000
default_outline_color 000000
alignment bottom_left
gap_x 60
gap_y 250
no_buffers yes
uppercase no
cpu_avg_samples 0
net_avg_samples 0
override_utf8_locale yes
#use_spacer yes


minimum_size 2048 1024
TEXT
${voffset 356}${offset 2128}${color EAEAEA}${font Roboto:style=Thin:pixelsize=384}${time %H:%M }${font Roboto:style=Thin:pixelsize=256}${time :%S}
${voffset -160}${offset 2152}${color EAEAEA}${font Roboto:style=Thin:pixelsize=128}${time %d %B %Y}${font}
